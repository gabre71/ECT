<h3>Users</h3>
<div class="span8">
<table class="table table-striped">
    <thead>
      <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
          <th>Registered</th>
          <th>Last sign in</th>
      </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
        <td><%= link_to user.name, edit_user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.to_date %></td>
        <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
        <td><%= user.last_sign_in_at.to_date unless user.last_sign_in_at.nil? %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>