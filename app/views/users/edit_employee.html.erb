<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">User profile</a></li>
    <li><a href="#tab2" data-toggle="tab">Holidays/sick leaves</a></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
			<%= simple_form_for(@user , :url => registration_path(@user), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
			  <%= f.error_notification %>
			  <%= display_base_errors @user %>
			  <%= f.input :name, :autofocus => true %>
			  <%= f.input :email, :required => true %>
			  <%= f.input :skype %>
			  <%= f.input :phone %>

			  <%= f.button :submit, 'Update', :class => "btn btn-large btn-success" %>
			<% end %>
    </div>
    <div class="tab-pane" id="tab2">
    	<div class="row">
    		<div class="span6">
					<%= render :partial=>"users/user_holiday_table", :locals => {:user => @user }%>
    		</div>
    		<div class="span6">
					<%= render :partial=>"users/user_sick_leave_table", :locals => {:user => @user }%>
    		</div>
    	</div>
      <div class="row">
        <div class="span6">
          <%= render :partial=>"users/user_sick_leave_table", :locals => {:user => @user }%>
        </div>
      </div>
    </div>
  </div>
</div>
		<%= link_to "Back", root_path , :class => "btn btn-mini btn-primary"%>	
