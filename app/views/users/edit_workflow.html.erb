<h3>Edit workflow</h3>
<div class="row">
	<div class="span6">
		<%= simple_form_for(@user , :html => {:class => 'form-horizontal' }) do |f| %>
		  <%= display_base_errors @user %>
		  <%= f.input :name, :label => "Request owner" ,:disabled => true%>
		  <%= f.input :manager_id, :collection => get_holiday_approvers, :label => "Approver" ,:required => true %>
		  <%= f.input :deputy_id, :label => "Substituted by" , :collection => User.all%>

		  <%= f.button :submit, 'Update', :class => "btn btn-large btn-success" %>
		<% end %>
		<%= link_to "Back", index_workflow_users_path , :class => "btn btn-mini btn-primary"%>	
	</div>
</div>
