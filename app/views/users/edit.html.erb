<legend>User management</legend>
<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">User profile</a></li>
    <li><a href="#tab2" data-toggle="tab">Roles</a></li>
    <li><a href="#tab3" data-toggle="tab">Holidays</a></li>
  </ul>
</div>
<div class="tab-content">
  <div class="tab-pane active" id="tab1">
		<legend>User profile</legend>
		<%= simple_form_for(@user , :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>

		  <%= f.input :name, :autofocus => true %>
		  <%= f.input :email, :required => true %>
		  <%= f.input :skype %>
		  <%= f.input :phone %>
		  <%= f.button :submit, :class =>"btn btn-success"%>
		<% end %>
	</div>
  <div class="tab-pane" id="tab2">
  	<div class="row">
  		<div class="span6">
				<%= render :partial=>"users/user_role", :locals => {:user => @user }%>
  		</div>
  	</div>
  </div>
  <div class="tab-pane" id="tab3">
  	<div class="row">
          <div class="span6">
                  <%= render :partial=>"user_holiday/form", :locals => {:user => @user }%>
          </div>
          <div class="span6">
                  <%= render :partial=>"user_holiday_table", :locals => {:user => @user }%>
          </div>
  	</div>
  </div>
</div>		
<div class="row">
  <div class= "span6">
    <%= link_to "Back", users_path ,:class =>"btn btn-mini btn-primary"%>
  </div>
  <div class= "span6" style="float:right;"> 
    <%= link_to("Delete user", user_path(@user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini btn-danger') unless @user == current_user %>
  </div>
</div>
